<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <RelativeLayout
        android:id="@+id/my_change_re"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/relativelayout_right_angle"
        android:paddingBottom="13dp">



        <ImageView
            android:id="@+id/initate_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/initate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/initate_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/initate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initate_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/initate_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/initate_pic"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:text="报名人数"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/initate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/initate_pic"
            android:layout_toRightOf="@+id/initate_count_text"
            android:text="10人"
            android:textColor="#AE1F5C"
            android:textSize="14dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/youjianhese" />


    </RelativeLayout>


</RelativeLayout>
