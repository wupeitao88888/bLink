<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:background="@drawable/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_invitlist"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_item_invitlist_name_user"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_toRightOf="@id/image_item_invitlist"
            android:layout_height="wrap_content"
            android:text="琪琪妈"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/tv_item_invitlist_name_user"
            android:layout_below="@id/tv_item_invitlist_name_user"
            android:layout_marginTop="@dimen/dp3"
            android:layout_height="wrap_content"
            android:text="邀请你参加："
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_invitlist_ok"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:text="查看"
            android:background="@drawable/button_normal"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_item_invitlist"
            android:id="@+id/tv_item_invitlist_name_goods"
            android:text="ajaegaeio"
            android:paddingBottom="@dimen/dp20"
            android:textColor="@color/black"
            />
    </RelativeLayout>
</RelativeLayout>