<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/relativelayout_right_angle"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/pay_url"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pay_url"
            android:layout_marginRight="15dp"
            android:text="团购详情"
            android:textColor="@color/black_e1"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pay_title"
            android:layout_marginRight="15dp"
            android:text="未消费"
            android:textColor="#B0255B"
            android:textSize="13dp"/>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/pay_url"
            android:layout_marginTop="20dp"
            android:background="@color/gray"/>


        <Button
            android:id="@+id/pay_cancel"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/pay_end"
            android:background="@drawable/relativelayout"
            android:text="退尾款"
            android:textColor="@color/black_e1"
            android:textSize="14dp"/>


        <TextView
            android:id="@+id/tv_item_already_all_pay_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="实付："
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_item_already_all_pay"
            android:layout_toRightOf="@id/tv_item_already_all_pay_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="20dp"
            android:text="￥10"
            android:textColor="#B0255B"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_item_already_all_pay_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_already_all_pay"
            android:layout_alignLeft="@id/tv_item_already_all_pay"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            android:text="￥10"
            android:textSize="12dp"/>

    </RelativeLayout>


</RelativeLayout>
