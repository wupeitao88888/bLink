<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/relativelayout_right_angle"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/pay_url"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pay_url"
            android:layout_marginRight="15dp"
            android:text="团购详情"
            android:textColor="@color/black_e1"
            android:textSize="15dp" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/pay_url"
            android:layout_marginTop="20dp"
            android:background="@color/gray" />


        <Button
            android:id="@+id/pay_end"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_normal"
            android:text="立即付款"
            android:textColor="@drawable/selector_button_normal"
            android:textSize="14dp" />

        <Button
            android:id="@+id/pay_cancel"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_below="@+id/line"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/pay_end"
            android:background="@drawable/relativelayout"
            android:text="取消"
            android:textColor="@color/black_e1"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/not_yet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="实付：￥10"
            android:textColor="#B0255B"
            android:textSize="14dp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>
