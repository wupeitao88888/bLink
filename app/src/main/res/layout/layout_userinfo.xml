<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <RelativeLayout
        android:id="@+id/handpic_re"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/relativelayout">

        <TextView
            android:id="@+id/handpic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="头像"
            android:textColor="@color/black_e0" />

        <ImageView
            android:id="@+id/handpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/nickname_re"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/relativelayout">

        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="昵称:"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/nickname_text"
            android:text="吴邪"
            android:layout_alignTop="@+id/nickname_text"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/updatePnumber_re"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/relativelayout">

        <TextView
            android:id="@+id/updatePnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="更换手机号"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/updatePW_re"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/relativelayout">

        <TextView
            android:id="@+id/updatePW_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改密码"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/updateAear_re"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/relativelayout">

        <TextView
            android:id="@+id/updateAear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改小区"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/updateAear_link_re"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/relativelayout">

        <EditText
            android:id="@+id/updateAear_link_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:focusable="false"
            android:hint="修改附属小区"
            android:textColor="@color/black_e0"
            android:textSize="15dp" />


    </RelativeLayout>




    <Button
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="退出登录"
        android:background="@drawable/button_normal"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        />

</LinearLayout>
