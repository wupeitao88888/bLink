<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/relativelayout"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/initate_pic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/initate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/initate_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:text="小明"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/initate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initate_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:text="2015/11/11 11:11"
            android:textColor="#86877E"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/initate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initate_time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:text="报名人数++++++++++++"
            android:textColor="#525354"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/initate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initate_info"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/initate_pic"
            android:text="有12人评论"
            android:textColor="#7E7F80"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_informatioin_person"
            android:layout_marginRight="@dimen/dp20"
            />

        <TextView
            android:id="@+id/tv_information_person"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            style="@style/textview_information"/>


    </RelativeLayout>


</RelativeLayout>
