<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/relativelayout"
        android:padding="5dp">

        <ImageView
            android:id="@+id/exercise_pic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/gray"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/exercise_pic"
            android:background="@color/transparent_black">

            <TextView
                android:id="@+id/exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/exercise_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_pic"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black_e1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/exercise_usercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exercise_address"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/exercise_author"
            android:layout_toRightOf="@+id/exercise_address"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/exercise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/exercise_address"
            android:layout_below="@+id/exercise_address"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_e1"
            android:textSize="13sp" />


        <RelativeLayout
            android:id="@+id/exercise_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/exercise_pic"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/exercise_authorPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/exercise_authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exercise_authorPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/exercise_author"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray" />


        <LinearLayout
            android:id="@+id/layout_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/signup"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layout_icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/layout_icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/layout_icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/layout_icon4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/layout_icon5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_normal"
            android:text="我要报名"
            android:textColor="@drawable/selector_button_normal"
            android:textSize="15sp" />


    </RelativeLayout>


</RelativeLayout>
