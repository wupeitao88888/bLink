<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="babylink亲子社交平台"
        android:layout_below="@+id/logo"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京石榴客科技有限公司旗下移动应用"
        android:layout_below="@+id/text_name"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#636363"/>

    <TextView
        android:id="@+id/text_introduces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_text_introduces"
        android:layout_below="@+id/text_tip"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginLeft="26.6dp"
        android:layout_marginRight="26.6dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#636363"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_buttom"
            android:textColor="@color/gray"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</RelativeLayout>
