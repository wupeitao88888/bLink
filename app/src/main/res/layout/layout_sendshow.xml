<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <RelativeLayout
            android:id="@+id/top_issue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <GridView
                android:id="@+id/noScrollgridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:horizontalSpacing="3dp"
                android:numColumns="5"
                android:scrollbars="none"
                android:verticalSpacing="5dp">
            </GridView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_introduce_re"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/top_issue"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/relativelayout">


            <EditText
                android:id="@+id/activity_introduce"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/share"
                android:layout_margin="13dp"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="输入文字"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:maxLines="13"
                android:textCursorDrawable="@null"
                android:textSize="15dp"
                android:textColorHint="@color/transparent_black"
                />

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="40dp"
                    android:visibility="gone"
                    android:layout_height="40dp"
                    android:background="@color/gray"/>


                <ImageView
                    android:id="@+id/weichat_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/sina_share"
                    android:background="@color/gray"/>

                <ImageView
                    android:id="@+id/sina_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:background="@color/gray"/>


            </RelativeLayout>


        </RelativeLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_below="@+id/activity_introduce_re"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/all_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textSize="15dp"
                android:checked="true"
                android:paddingLeft="@dimen/dp10"
                android:button="@drawable/ad_selector"
                android:text="@string/all_person"/>


            <RadioButton
                android:paddingLeft="@dimen/dp10"
                android:id="@+id/me_home"
                android:button="@drawable/ad_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/transparent_black"
                android:textSize="15dp"
                android:text="@string/me_home"/>
        </RadioGroup>

        <Button
            android:id="@+id/certain"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="发布"
            android:background="@drawable/button_normal_long"
            android:onClick="okClick"
            android:textColor="@color/white"
            android:textSize="15dp"/>


    </RelativeLayout>
</RelativeLayout>
