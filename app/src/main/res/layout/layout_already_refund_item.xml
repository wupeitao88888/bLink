<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/relativelayout_right_angle"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/pay_url"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pay_url"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/pay_url"
            android:text="团购详情"
            android:textColor="@color/black_e1"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pay_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pay_url"
            android:text="定价：￥10000"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_deposit"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pay_url"
            android:text="已付：￥10"
            android:textColor="#B0255B"
            android:textSize="14dp"/>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/pay_url"
            android:layout_marginTop="20dp"
            android:background="@color/gray"/>


        <Button
            android:focusable="false"
            android:id="@+id/pay_end"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/relativelayout"
            android:textColor="@color/black_e1"
            android:text="已退款"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/not_yet_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="未付："
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/not_yet"
            android:layout_toRightOf="@id/not_yet_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="20dp"
            android:text="￥10"
            android:textStyle="bold"
            android:textColor="#B0255B"
            android:textSize="14dp"/>


    </RelativeLayout>


</RelativeLayout>
