<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/dp10"
              android:orientation="vertical"
              android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/relativelayout_right_angle"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/iamge_order_des_goodsbg"
            android:layout_width="90dp"
            android:layout_height="70dp"/>


        <TextView
            android:id="@+id/tv_order_des_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iamge_order_des_goodsbg"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iamge_order_des_goodsbg"
            android:text="团购详情"
            android:textColor="@color/black_e1"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/tv_order_des_dingjin"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_order_des_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iamge_order_des_goodsbg"
            android:text="定价：￥10000"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/tv_order_des_refund_title"
            android:layout_below="@+id/tv_order_des_dingjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iamge_order_des_goodsbg"
            android:text="已付：￥10"
            android:textColor="#B0255B"
            android:textSize="@dimen/sp16"/>

        <ImageView
            android:id="@+id/iamge_order_des_status"
            android:layout_width="70dp"
            android:layout_alignParentRight="true"
            android:layout_height="70dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_order_des_refund"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:padding="@dimen/dp20"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/RED_TEXT"
            android:text="实退金额："
            />

        <TextView
            android:id="@+id/tv_order_des_refund_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/RED_TEXT"
            android:text="59.00"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:visibility="gone"
        android:id="@+id/layout_order_des_use"
        android:background="@color/white"
        android:padding="@dimen/dp20"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/black"
            android:text="消费码"
            />

        <TextView
            android:id="@+id/tv_order_des_usecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/black"
            android:text="59.00"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:padding="@dimen/dp20"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_des_orderno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:text="123456"
            />

        <TextView
            android:id="@+id/tv_order_des_payno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/sp12"
            android:text="59.00"
            />

        <TextView
            android:id="@+id/tv_order_des_paytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:text="59.00"
            />
    </LinearLayout>
</LinearLayout>
