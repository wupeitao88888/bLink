<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:weightSum="2"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listview_find_category"
            android:divider="@color/white"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="-2.5dp"
            android:id="@+id/tv_pop_find_category_invite"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/dp10"
                android:gravity="center"
                android:text="被邀请"
                android:textColor="@color/RED_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_pop_find_category_invite_sum"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_textview_reyuan"
                android:layout_width="20dp"
                android:text="1"
                android:visibility="gone"
                android:layout_height="20dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>